<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<!-- ActionForm的配置 -->
	</form-beans>
	
	
	
	<action-mappings>
		<!-- Action的配置 -->
		<action path="/loginAction" scope="request" parameter="method" type="org.springframework.web.struts.DelegatingActionProxy" >
			<forward name="loginSuccess" path="/main.jsp" redirect="true"/>
			<forward name="loginOff" path="/index.jsp" redirect="true"/>
			<forward name="loginFailure" path="/index.jsp"/>
		</action>
		
		
		<action path="/testAction" scope="request" parameter="method" type="org.springframework.web.struts.DelegatingActionProxy" >
		</action>
	</action-mappings>
	
</struts-config>

